{
	"name": "Egg Timer",
	"description": "Replace recipe cooking times with a convenient countdown timer.",
	"version": "1.0",
	"content_scripts": [
		{
			
			"matches": ["*://*.allrecipes.com/*", "*://*.epicurious.com/*", "*://*.marthastewart.com/*",
				"*://*.food.com/*", "*://*.foodnetwork.com/*", "*://*.myrecipes.com/*", "*://*.yummly.com/*", "*://cooking.nytimes.com/*" ],
			"js": ["script.js"],
			"css": ["timer.css"]
		}
	],
	"manifest_version": 2,
	"web_accessible_resources": ["loud.mp3"]
}

